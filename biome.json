{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "files": {
      "ignore": [
        "package.json",
        "**/dist/**"
      ]
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true,
      "defaultBranch": "main"
    },
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 120
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    }
  }